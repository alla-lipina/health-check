= form_for([current_org, @survey]) do |f|
  - if @survey.errors.any?
    #error_explanation
      %h2= "#{pluralize(@survey.errors.count, "error")} prohibited this survey from being saved:"
      %ul
        - @survey.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :start_at do
      Start at
      = f.text_field :start_at, class: "form-control", placeholder: "Start at"

  .form-group
    = f.label :stop_at do
      Stop at
      = f.text_field :stop_at, class: "form-control", placeholder: "Stop at"

  
  = f.submit class: "btn btn-primary"
