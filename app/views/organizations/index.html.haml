%p#notice= notice
%h1 Listing Organizations
%table.table
  %thead
    %tr
      %th
        name
      %th
        actions
  %tbody
    - @organizations.each do |organization|
      %tr
        %td
          = organization.name
        %td
          = link_to 'Show', organization
          |
          = link_to 'Edit', edit_organization_path(organization)
          |
          = link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' }
%br
  = link_to 'New Organization', new_organization_path, class: "btn btn-primary"