%h1 
  Listing Teams of "
  = current_org.name
  "
%table.table.table-hover
  
  %tbody
    - current_org.teams.each do |team|
      %tr
        %td
          %strong
            = team.name
          %br
          %em
            = team.emails
        %td.hc-no-wrap
          = link_to 'Edit', edit_organization_team_path(current_org, team), class: "btn btn-link"
          \/
          .inline-block{ style: "display: inline-block" }
            = button_to "Delete", [current_org, team], method: :delete, class: "btn btn-link"

= link_to 'New Team', new_organization_team_path(current_org), class: "btn btn-primary"